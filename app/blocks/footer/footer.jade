include ../container/container
include ../phone/phone
include ../menu/menu

include ../up/up

mixin footer()
  +b('footer').footer
      +container()
        .footer__wrap
          .footer__header
            h4.footer__title Ветклиника
            +phone() 7 (495)&nbsp;
                span 500 50 50
          .footer__body
            .footer__col.footer__col--narrow
              .footer__inner
                +menu(getData('menu')).--footer
            .footer__col.footer__col--wide
              #map
            .footer__col.footer__col--narrow
              .footer__inner
                .footer__address
                  p.title Адрес ветклиники:
                  span.text Россия, Москва
                  span.text Сухаревская площадь  
                  span.text 16 / 18
                span.footer__copy © 2016 Госветклиника
  +up()
