include ../slider/slider
include ../banner/banner

mixin hero()
  +b.hero&attributes(attributes)
    +e.slider
      +slider()
    +e.widget
      +banner('Вызов ветеринара круглосуточно', ['icon-hair']).--attention
      +banner('Лаболатория ветклиники', ['icon-hair'])
      +banner('Зоогостиница', ['icon-hair'])
      +banner('Ищем хозяев', ['icon-hair'])
