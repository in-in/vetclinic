            +e('p').text +7 (495) 500 50 50
          +e.block
            +e('p').title Ближайшие станци метро:
            +e.wrap
              +icon('metro', 90, 74).contacts__icon
              +e('p').text Сухаревская
            +e.wrap
              +icon('metro', 90, 74).contacts__icon
              +e('p').text Чистые пруды
            +e.wrap
              +icon('metro', 90, 74).contacts__icon
              +e('p').text Тургеневская
          +e.block
            +e('p').title Режим работы:
            +e('p').text ПН / ВТ / СР / ЧТ / ПТ
            +e('p').text с 8:00 до 18:00
      +e.form
